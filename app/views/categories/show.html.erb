<!-- Options for Explore Page -->
<div class="nav-divide">
	<nav class="content">
	<%= render "shared/shop_options" %>
	</nav>
	<nav class="filters">
		<%= render "sorts"%>
	</nav>
</div>
<br>

<ul>
<% Category.all.each do |category| %>
  <li><a href="<%= category_url(category) %>"><%= category.name %></a></li>
<% end %>
</ul>

<h2><%= @category.name %></h2>

<% @products.each do |product| %>
  <section class="product">
    <a href="<%= product_url(product) %>">
      <%= image_tag(product.image.url(:medium)) %>
    </a>

    <br>
  	Name: <strong><%= product.name %></strong>
  	<br>
    price: <a href="<%= product.url %>">$<%= product.price.round %></a>

  </section>
<% end %>
