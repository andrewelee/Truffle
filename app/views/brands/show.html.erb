<!-- Options for Explore Page -->
<%= render "shared/shop_options" %>

<br>

<% Brand.all.each do |brand| %>
  <a href="<%= brand_url(brand) %>"><%= brand.name %></a>
<% end %>


<h2><%= @brand.name %></h2>

<% @brand.products.each do |product| %>
  <section class="product">
    <a href="<%= product_url(product) %>">
      <%= image_tag(product.image.url(:medium)) %>
    </a>

    <br>
  	Name: <strong><%= product.name %></strong>
  	<br>
    price: <a href="<%= product.url %>">$<%= product.price.round %></a>

  </section>
<% end %>
