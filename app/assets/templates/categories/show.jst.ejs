<section class="products">

  <section class="products-list group">
    <ul>
      <% _(category.attributes.products).each(function(product) { %>
        <li>

        	<div class="product-box no-like">
            <div class="product-price">
              <a href="<%= product.url %>">
                $<%= Math.round(product.price) %>
              </a>
            </div>

            <div class="product-image" data-id="<%= product.id %>">
              <a href="#/products/<%= product.id %>">
                <div class="product-image bg" data-id="<%= product.id %>"></div>
              </a>
              <img src="<%= product.imageSmall %>"
              data-id="<%= product.id %>">
            </div>

          </div>
        </li>
      <% }) %>
    </ul>
  </section>

</section>