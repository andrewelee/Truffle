<div class="user-sandwich">
  <div class="user-header">
  	<div class="user-container">

  		<div class="user-avatar">
  			<img src="<%= user.escape("image") %>">
  		</div>

    	<div class="user-name">
    		<h2><%= user.escape('name') %></h1>
    		<h3>@<%= user.escape('username') %></h2>
    	</div>

			<ul class="user-nav group">
			  <li class="liked nav">Likes<div class="count"><%= user.attributes.likedProducts.length %></div></li>
			  <!-- <li>Collections</li> -->
			  <li class="following nav">Following<div class="count"><%= user.attributes.followedUsers.length %></div></li>
			  <li class="followers nav">Followers<div class="count"><%= user.attributes.followers.length %></div></li>
			</nav>

  	</div>
  </div>
</div>

